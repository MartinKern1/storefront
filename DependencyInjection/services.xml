<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" />
        <service id="Shopware\Storefront\Twig\TemplateDataExtension">
            <tag name="twig.extension" />

            <argument type="service" id="request_stack" />
        </service>

        <!-- Twig / Theme -->
        <service id="Shopware\Storefront\Listing\NavigationService" public="true">
            <argument type="service" id="category.repository"/>
        </service>

        <service id="Shopware\Storefront\Account\Page\CustomerAddressPageLoader">
            <argument type="service" id="customer_address.repository"/>
        </service>

        <service id="Shopware\Storefront\Account\Page\OrderPageLoader">
            <argument type="service" id="order.repository"/>
        </service>

        <service id="Shopware\Storefront\Framework\Seo\DbalIndexing\SeoUrl\DetailPageSeoUrlIndexer">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="slugify"/>
            <argument type="service" id="router"/>
            <argument type="service" id="product.repository"/>
            <argument type="service" id="sales_channel.repository"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Shopware\Core\Content\Product\Util\EventIdExtractor"/>
            <!--<tag name="shopware.dbal_indexing.indexer"/>-->
        </service>

        <service id="Shopware\Storefront\Framework\Seo\DbalIndexing\SeoUrl\ListingPageSeoUrlIndexer">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="slugify"/>
            <argument type="service" id="router"/>
            <argument type="service" id="category.repository"/>
            <argument type="service" id="sales_channel.repository"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Shopware\Core\Content\Product\Util\EventIdExtractor"/>
            <!--<tag name="shopware.dbal_indexing.indexer"/>-->
        </service>

        <service id="Shopware\Storefront\Checkout\PageLoader\PaymentMethodLoader">
            <argument type="service" id="payment_method.repository"/>
        </service>

        <service id="Shopware\Storefront\Product\PageLoader\DetailPageLoader">
            <argument type="service" id="Shopware\Core\Content\Product\Storefront\StorefrontProductRepository"/>
            <argument type="service" id="product_configurator.repository"/>
        </service>

        <service id="Shopware\Storefront\Listing\PageLoader\ListingPageLoader">
            <argument type="service" id="Shopware\Core\Content\Product\Storefront\StorefrontProductRepository"/>
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="Shopware\Storefront\Search\PageLoader\SearchPageLoader">
            <argument type="service" id="Shopware\Core\Content\Product\Storefront\StorefrontProductRepository"/>
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="Shopware\Storefront\Account\Page\AccountService">
            <argument type="service" id="country.repository"/>
            <argument type="service" id="customer_address.repository"/>
            <argument type="service" id="customer.repository"/>
            <argument type="service" id="Shopware\Core\Checkout\Context\CheckoutContextPersister"/>
        </service>

        <service id="Shopware\Storefront\Account\Controller\AccountController" public="true">
            <argument type="service" id="Shopware\Core\Checkout\Context\CheckoutContextPersister"/>
            <argument type="service" id="Shopware\Storefront\Account\Page\AccountService"/>
            <argument type="service" id="Shopware\Storefront\Account\Page\CustomerAddressPageLoader"/>
            <argument type="service" id="Shopware\Storefront\Account\PageLoader\CustomerPageLoader"/>
            <argument type="service" id="Shopware\Core\Checkout\Context\CheckoutContextService"/>
            <argument type="service" id="Shopware\Storefront\Checkout\PageLoader\PaymentMethodLoader"/>
            <argument type="service" id="Shopware\Storefront\Account\Page\OrderPageLoader"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Storefront\Content\Controller\Widget\IndexController" public="true">
            <argument type="service" id="currency.repository"/>
            <argument type="service" id="language.repository"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Storefront\Checkout\Controller\Widget\CheckoutController" public="true">
            <argument type="service" id="Shopware\Core\Checkout\Cart\Storefront\CartService" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Storefront\Twig\ErrorTemplateResolver" public="false">
            <argument type="service" id="twig"/>
        </service>

        <service id="Shopware\Storefront\Framework\Controller\ErrorController" public="false">
            <argument type="service" id="Shopware\Storefront\Twig\ErrorTemplateResolver"/>
        </service>

        <service id="Shopware\Storefront\Listing\Controller\ListingController" public="true">
            <argument type="service" id="Shopware\Storefront\Listing\PageLoader\ListingPageLoader" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Storefront\Product\Controller\DetailController" public="true">
            <argument type="service" id="Shopware\Storefront\Product\PageLoader\DetailPageLoader" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Storefront\Account\PageLoader\CustomerPageLoader"/>

        <service id="Shopware\Storefront\Checkout\Controller\CartController" public="true">
            <argument type="service" id="Shopware\Core\Checkout\Cart\Storefront\CartService"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service class="Shopware\Storefront\Framework\Routing\StorefrontSubscriber" id="shopware.storefront.routing.storefront_subscriber">
            <tag name="kernel.event_subscriber"/>
            <argument type="service" id="request_stack"/>
            <argument type="service" id="router"/>
            <argument type="service" id="Shopware\Storefront\Framework\Controller\ErrorController"/>
        </service>

        <service id="Shopware\Storefront\Checkout\Controller\CheckoutController" public="true">
            <argument type="service" id="Shopware\Core\Checkout\Cart\Storefront\CartService"/>
            <argument type="service" id="order.repository"/>
            <argument type="service" id="Shopware\Storefront\Checkout\PageLoader\PaymentMethodLoader"/>
            <argument type="service" id="Shopware\Core\Checkout\Context\CheckoutContextPersister"/>
            <argument type="service" id="Shopware\Core\Checkout\Payment\PaymentService"/>
            <argument type="service" id="router"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Storefront\Search\Controller\SearchController" public="true">
            <argument type="service" id="Shopware\Storefront\Search\PageLoader\SearchPageLoader"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <!-- Event subscriber -->
        <service id="Shopware\Storefront\Account\Subscriber\AddressSaveSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Storefront\Account\Subscriber\EmailSaveSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Storefront\Account\Subscriber\LoginSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Storefront\Account\Subscriber\PasswordSaveSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Storefront\Account\Subscriber\RegistrationSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Storefront\Account\Subscriber\ProfileSaveSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Storefront\Listing\Controller\Widget\ListingController" public="true">
            <argument type="service" id="Shopware\Core\Content\Product\Storefront\StorefrontProductRepository"/>
            <argument type="service" id="Shopware\Storefront\Listing\PageLoader\ListingPageLoader"/>
            <argument type="service" id="Shopware\Storefront\Search\PageLoader\SearchPageLoader"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Storefront\Listing\Subscriber\SortingSubscriber">
            <argument type="service" id="listing_sorting.repository"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Storefront\Product\Subscriber\DatasheetAggregationSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Storefront\Listing\Subscriber\PaginationSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Storefront\Product\Subscriber\ManufacturerAggregationSubscriber">
            <argument type="service" id="product_manufacturer.repository"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Storefront\Product\Subscriber\PriceAggregationSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Storefront\Search\Subscriber\SearchTermSubscriber">
            <tag name="kernel.event_subscriber"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Search\SearchBuilder"/>
        </service>

        <!--Entity field resolver -->
        <service class="Shopware\Storefront\Framework\Seo\Entity\Dbal\CanonicalUrlAssociationFieldResolver" id="shopware.storefront.api.entity.dbal.canonical_url_association_field_resolver">
            <tag name="shopware.entity.field_resolver" priority="200"/>
        </service>

        <!-- Argument Resolver -->

        <service id="Shopware\Storefront\Account\Page\AddressSaveRequestResolver">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="request_stack"/>
            <tag name="controller.argument_value_resolver" priority="1000"/>
        </service>

        <service class="Shopware\Storefront\Listing\Page\ListingPageRequestResolver" id="shopware.storefront.page.listing.listing_page_request_resolver">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="request_stack"/>
            <tag name="controller.argument_value_resolver" priority="1000"/>
        </service>

        <service id="Shopware\Storefront\Account\Page\EmailSaveRequestResolver">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="request_stack"/>
            <tag name="controller.argument_value_resolver" priority="1000"/>
        </service>

        <service id="Shopware\Storefront\Account\Page\LoginRequestResolver">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="request_stack"/>
            <tag name="controller.argument_value_resolver" priority="1000"/>
        </service>

        <service id="Shopware\Storefront\Account\Page\PasswordSaveRequestResolver">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="request_stack"/>
            <tag name="controller.argument_value_resolver" priority="1000"/>
        </service>

        <service id="Shopware\Storefront\Account\Page\ProfileSaveRequestResolver">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="request_stack"/>
            <tag name="controller.argument_value_resolver" priority="1000"/>
        </service>

        <service id="Shopware\Storefront\Account\Page\RegistrationRequestResolver">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="request_stack"/>
            <tag name="controller.argument_value_resolver" priority="1000"/>
        </service>

        <service class="Shopware\Storefront\Search\Page\SearchPageRequestResolver" id="shopware.storefront.page.listing.search_page_request_resolver">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="request_stack"/>
            <tag name="controller.argument_value_resolver" priority="1000"/>
        </service>

        <service id="Shopware\Core\Checkout\Context\CheckoutContextValueResolver">
            <argument type="service" id="request_stack"/>
            <tag name="controller.argument_value_resolver" priority="1000"/>
        </service>

        <service id="Shopware\Storefront\Framework\Seo\Product\UrlGeneratorExtension">
            <argument type="service" id="request_stack"/>
            <tag name="kernel.event_subscriber"/>
            <tag name="shopware.entity.extension"/>
        </service>

        <service id="Shopware\Storefront\Framework\Seo\Product\CanonicalUrlExtension">
            <tag name="shopware.entity.extension"/>
        </service>

        <service id="Shopware\Storefront\Framework\Seo\Category\CanonicalUrlExtension">
            <tag name="shopware.entity.extension"/>
        </service>

        <service id="Shopware\Storefront\Framework\Seo\SeoUrlDefinition" >
            <tag name="shopware.entity.definition" entity="seo_url" />
        </service>

        <service id="Shopware\Storefront\Framework\Command\SalesChannelCreateStorefrontCommand">
            <argument type="service" id="sales_channel.repository"/>
            <tag name="console.command"/>
        </service>

        <service id="Shopware\Storefront\Framework\Seo\SalesChannelExtension">
            <tag name="shopware.entity.extension"/>
        </service>

        <service id="Shopware\Storefront\Framework\Seo\Entity\FieldHandler\CanonicalUrlFieldSerializer">
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Write\WriteCommandExtractor" />
            <tag name="shopware.write_read_field_handler"/>
        </service>

    </services>
</container>
