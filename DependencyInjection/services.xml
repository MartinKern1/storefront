<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" />
        <service id="Shopware\Storefront\Framework\Twig\TemplateDataExtension">
            <tag name="twig.extension" />

            <argument type="service" id="request_stack" />
        </service>

        <!-- Twig / Theme -->
        <service id="Shopware\Storefront\Framework\Seo\DbalIndexing\SeoUrl\DetailPageSeoUrlIndexer">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="slugify"/>
            <argument type="service" id="router"/>
            <argument type="service" id="product.repository"/>
            <argument type="service" id="sales_channel.repository"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Shopware\Core\Content\Product\Util\EventIdExtractor"/>
            <argument type="service" id="Shopware\Core\Checkout\Context\CheckoutContextFactory"/>
            <!--<tag name="shopware.dbal_indexing.indexer"/>-->
        </service>

        <service id="Shopware\Storefront\Framework\Seo\DbalIndexing\SeoUrl\ListingPageSeoUrlIndexer">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="slugify"/>
            <argument type="service" id="router"/>
            <argument type="service" id="category.repository"/>
            <argument type="service" id="sales_channel.repository"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Shopware\Core\Content\Product\Util\EventIdExtractor"/>
            <argument type="service" id="Shopware\Core\Checkout\Context\CheckoutContextFactory"/>
            <!--<tag name="shopware.dbal_indexing.indexer"/>-->
        </service>

        <service id="Shopware\Storefront\Controller\ListingPageletController" public="true">
            <argument type="service" id="Shopware\Core\Content\Product\Storefront\StorefrontProductRepository"/>
            <argument type="service" id="Shopware\Storefront\Page\Listing\ListingPageLoader"/>
            <argument type="service" id="Shopware\Storefront\Page\Search\SearchPageLoader"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Storefront\Controller\ContentController" public="true">
            <argument type="service" id="Shopware\Storefront\Page\ContentHome\ContentHomePageLoader"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Storefront\Controller\AccountController" public="true">
            <argument type="service" id="Shopware\Core\Checkout\Context\CheckoutContextPersister"/>
            <argument type="service" id="Shopware\Core\Checkout\Customer\Storefront\AccountService"/>
            <argument type="service" id="Shopware\Storefront\Page\AccountLogin\AccountLoginPageLoader"/>
            <argument type="service" id="Shopware\Storefront\Page\AccountOverview\AccountOverviewPageLoader"/>
            <argument type="service" id="Shopware\Storefront\Page\AccountAddress\AccountAddressPageLoader"/>
            <argument type="service" id="Shopware\Storefront\Page\AccountProfile\AccountProfilePageLoader"/>
            <argument type="service" id="Shopware\Storefront\Page\AccountPaymentMethod\AccountPaymentMethodPageLoader"/>
            <argument type="service" id="Shopware\Storefront\Page\AccountOrder\AccountOrderPageLoader"/>
            <argument type="service" id="Shopware\Core\Checkout\Context\CheckoutContextService"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Storefront\ActionController\ContextController" public="true">
            <argument type="service" id="Shopware\Core\Checkout\Context\CheckoutContextPersister"/>
            <argument type="service" id="Shopware\Core\Checkout\Context\CheckoutContextService"/>
            <argument type="service" id="currency.repository"/>
            <argument type="service" id="language.repository"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Storefront\Controller\CheckoutPageletController" public="true">
            <argument type="service" id="Shopware\Storefront\Pagelet\CartInfo\CartInfoPageletLoader" />
        </service>

        <service id="Shopware\Storefront\Framework\Twig\ErrorTemplateResolver" public="false">
            <argument type="service" id="twig"/>
        </service>

        <service id="Shopware\Storefront\Controller\ErrorController" public="false">
            <argument type="service" id="Shopware\Storefront\Framework\Twig\ErrorTemplateResolver"/>
        </service>

        <service id="Shopware\Storefront\Controller\ListingController" public="true">
            <argument type="service" id="Shopware\Storefront\Page\Listing\ListingPageLoader" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Storefront\Controller\ProductController" public="true">
            <argument type="service" id="Shopware\Storefront\Page\ProductDetail\ProductDetailPageLoader" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>


        <!-- PageLoader -->
        <service id="Shopware\Storefront\Page\ContentHome\ContentHomePageLoader">
            <argument type="service" id="Shopware\Storefront\Pagelet\ContentHome\ContentHomePageletLoader" />
            <argument type="service" id="Shopware\Storefront\Pagelet\ContentHeader\ContentHeaderPageletLoader" />
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="Shopware\Storefront\Page\Listing\ListingPageLoader">
            <argument type="service" id="Shopware\Storefront\Pagelet\Listing\ListingPageletLoader" />
            <argument type="service" id="Shopware\Storefront\Pagelet\NavigationSidebar\NavigationSidebarPageletLoader" />
            <argument type="service" id="Shopware\Storefront\Pagelet\ContentHeader\ContentHeaderPageletLoader" />
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="Shopware\Storefront\Page\AccountLogin\AccountLoginPageLoader">
            <argument type="service" id="Shopware\Storefront\Pagelet\AccountLogin\AccountLoginPageletLoader" />
            <argument type="service" id="Shopware\Storefront\Pagelet\ContentHeader\ContentHeaderPageletLoader" />
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="Shopware\Storefront\Page\AccountOverview\AccountOverviewPageLoader">
            <argument type="service" id="Shopware\Storefront\Pagelet\AccountProfile\AccountProfilePageletLoader" />
            <argument type="service" id="Shopware\Storefront\Pagelet\ContentHeader\ContentHeaderPageletLoader" />
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="Shopware\Storefront\Page\AccountProfile\AccountProfilePageLoader">
            <argument type="service" id="Shopware\Storefront\Pagelet\AccountProfile\AccountProfilePageletLoader" />
            <argument type="service" id="Shopware\Storefront\Pagelet\ContentHeader\ContentHeaderPageletLoader" />
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="Shopware\Storefront\Page\AccountAddress\AccountAddressPageLoader">
            <argument type="service" id="Shopware\Storefront\Pagelet\AccountAddress\AccountAddressPageletLoader" />
            <argument type="service" id="Shopware\Storefront\Pagelet\ContentHeader\ContentHeaderPageletLoader" />
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="Shopware\Storefront\Page\AccountPaymentMethod\AccountPaymentMethodPageLoader">
            <argument type="service" id="Shopware\Storefront\Pagelet\AccountPaymentMethod\AccountPaymentMethodPageletLoader" />
            <argument type="service" id="Shopware\Storefront\Pagelet\ContentHeader\ContentHeaderPageletLoader" />
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="Shopware\Storefront\Page\AccountOrder\AccountOrderPageLoader">
            <argument type="service" id="Shopware\Storefront\Pagelet\AccountOrder\AccountOrderPageletLoader" />
            <argument type="service" id="Shopware\Storefront\Pagelet\ContentHeader\ContentHeaderPageletLoader" />
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="Shopware\Storefront\Page\ProductDetail\ProductDetailPageLoader">
            <argument type="service" id="Shopware\Storefront\Pagelet\ProductDetail\ProductDetailPageletLoader" />
            <argument type="service" id="Shopware\Storefront\Pagelet\ContentHeader\ContentHeaderPageletLoader" />
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="Shopware\Storefront\Page\Search\SearchPageLoader">
            <argument type="service" id="Shopware\Storefront\Pagelet\Search\SearchPageletLoader" />
            <argument type="service" id="Shopware\Storefront\Pagelet\ContentHeader\ContentHeaderPageletLoader" />
            <argument type="service" id="event_dispatcher" />
        </service>


        <!-- PageletLoader -->
        <service id="Shopware\Storefront\Pagelet\AccountAddress\AccountAddressPageletLoader">
            <argument type="service" id="customer_address.repository"/>
        </service>

        <service id="Shopware\Storefront\Pagelet\AccountOrder\AccountOrderPageletLoader">
            <argument type="service" id="order.repository"/>
        </service>

        <service id="Shopware\Storefront\Pagelet\CheckoutPaymentMethod\CheckoutPaymentMethodPageletLoader">
            <argument type="service" id="payment_method.repository"/>
        </service>

        <service id="Shopware\Storefront\Pagelet\ProductDetail\ProductDetailPageletLoader">
            <argument type="service" id="Shopware\Core\Content\Product\Storefront\StorefrontProductRepository"/>
            <argument type="service" id="product_configurator.repository"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\Storefront\CartService"/>
            <argument type="service" id="Shopware\Core\Content\Category\Storefront\StorefrontCategoryRepository"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Storefront\Pagelet\Listing\ListingPageletLoader">
            <argument type="service" id="Shopware\Core\Content\Product\Storefront\StorefrontProductRepository"/>
            <argument type="service" id="event_dispatcher" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Storefront\Pagelet\Search\SearchPageletLoader">
            <argument type="service" id="Shopware\Core\Content\Product\Storefront\StorefrontProductRepository"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\Storefront\CartService"/>
            <argument type="service" id="Shopware\Core\Content\Category\Storefront\StorefrontCategoryRepository"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Storefront\Pagelet\ContentHeader\ContentHeaderPageletLoader">
            <argument type="service" id="Shopware\Storefront\Pagelet\Navigation\NavigationPageletLoader"/>
            <argument type="service" id="Shopware\Storefront\Pagelet\CartInfo\CartInfoPageletLoader"/>
            <argument type="service" id="Shopware\Storefront\Pagelet\Shopmenu\ShopmenuPageletLoader"/>
            <argument type="service" id="Shopware\Storefront\Pagelet\ContentCurrency\ContentCurrencyPageletLoader"/>
            <argument type="service" id="Shopware\Storefront\Pagelet\ContentLanguage\ContentLanguagePageletLoader"/>
        </service>

        <service id="Shopware\Storefront\Pagelet\AccountProfile\AccountProfilePageletLoader">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Storefront\Pagelet\AccountPaymentMethod\AccountPaymentMethodPageletLoader">
            <argument type="service" id="payment_method.repository"/>
        </service>

        <service id="Shopware\Storefront\Pagelet\ContentLanguage\ContentLanguagePageletLoader">
            <argument type="service" id="language.repository"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Storefront\Pagelet\NavigationSidebar\NavigationSidebarPageletLoader">
            <argument type="service" id="Shopware\Core\Content\Category\Storefront\StorefrontCategoryRepository"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Storefront\Pagelet\AccountLogin\AccountLoginPageletLoader">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Storefront\Pagelet\ContentHome\ContentHomePageletLoader" />

        <service id="Shopware\Storefront\Pagelet\Navigation\NavigationPageletLoader">
            <argument type="service" id="Shopware\Core\Content\Category\Storefront\StorefrontCategoryRepository"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Storefront\Pagelet\CartInfo\CartInfoPageletLoader">
            <argument type="service" id="Shopware\Core\Checkout\Cart\Storefront\CartService"/>
            <argument type="service" id="event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Storefront\Pagelet\ContentCurrency\ContentCurrencyPageletLoader">
            <argument type="service" id="currency.repository"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Storefront\Pagelet\Shopmenu\ShopmenuPageletLoader">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Storefront\Controller\CartController" public="true">
            <argument type="service" id="Shopware\Core\Checkout\Cart\Storefront\CartService"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service class="Shopware\Storefront\Framework\Routing\StorefrontSubscriber" id="shopware.storefront.routing.storefront_subscriber">
            <tag name="kernel.event_subscriber"/>
            <argument type="service" id="request_stack"/>
            <argument type="service" id="router"/>
            <argument type="service" id="Shopware\Storefront\Controller\ErrorController"/>
        </service>

        <service id="Shopware\Storefront\Controller\CheckoutController" public="true">
            <argument type="service" id="Shopware\Core\Checkout\Cart\Storefront\CartService"/>
            <argument type="service" id="order.repository"/>
            <argument type="service" id="Shopware\Storefront\Pagelet\CheckoutPaymentMethod\CheckoutPaymentMethodPageletLoader"/>
            <argument type="service" id="Shopware\Core\Checkout\Context\CheckoutContextPersister"/>
            <argument type="service" id="Shopware\Core\Checkout\Payment\PaymentService"/>
            <argument type="service" id="router"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Storefront\Controller\SearchController" public="true">
            <argument type="service" id="Shopware\Storefront\Page\Search\SearchPageLoader"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <!-- Event subscriber -->
        <service id="Shopware\Storefront\Framework\Subscriber\PageSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Storefront\Action\AccountAddress\AccountAddressSaveSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Storefront\Action\AccountEmail\AccountEmailSaveSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Storefront\Action\AccountLogin\AccountLoginSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Storefront\Action\AccountPassword\AccountPasswordSaveSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Storefront\Action\AccountRegistration\AccountRegistrationSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Storefront\Action\AccountProfile\AccountProfileSaveSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Storefront\Pagelet\Listing\Subscriber\SortingSubscriber">
            <argument type="service" id="listing_sorting.repository"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Storefront\Pagelet\Listing\Subscriber\DatasheetAggregationSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Storefront\Pagelet\Listing\Subscriber\PaginationSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Storefront\Pagelet\Listing\Subscriber\ManufacturerAggregationSubscriber">
            <argument type="service" id="product_manufacturer.repository"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Storefront\Pagelet\Listing\Subscriber\PriceAggregationSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Shopware\Storefront\Pagelet\Search\Subscriber\SearchTermSubscriber">
            <tag name="kernel.event_subscriber"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Search\SearchBuilder"/>
        </service>

        <service id="Shopware\Storefront\Framework\Seo\Entity\Dbal\CanonicalUrlAssociationFieldResolver">
            <tag name="shopware.entity.field_resolver" priority="200"/>
        </service>

        <service id="Shopware\Storefront\Action\AccountAddress\AccountAddressSaveRequestResolver">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="request_stack"/>
            <tag name="controller.argument_value_resolver" priority="1000"/>
        </service>

        <service id="Shopware\Storefront\Action\AccountEmail\AccountEmailSaveRequestResolver">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="request_stack"/>
            <tag name="controller.argument_value_resolver" priority="1000"/>
        </service>

        <service id="Shopware\Storefront\Action\AccountLogin\AccountLoginRequestResolver">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="request_stack"/>
            <tag name="controller.argument_value_resolver" priority="1000"/>
        </service>

        <service id="Shopware\Storefront\Action\AccountPassword\AccountPasswordSaveRequestResolver">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="request_stack"/>
            <tag name="controller.argument_value_resolver" priority="1000"/>
        </service>

        <service id="Shopware\Storefront\Action\AccountProfile\AccountProfileSaveRequestResolver">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="request_stack"/>
            <tag name="controller.argument_value_resolver" priority="1000"/>
        </service>

        <service id="Shopware\Storefront\Action\AccountRegistration\AccountRegistrationRequestResolver">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="request_stack"/>
            <tag name="controller.argument_value_resolver" priority="1000"/>
        </service>

        <service id="Shopware\Core\Checkout\Context\CheckoutContextValueResolver">
            <argument type="service" id="request_stack"/>
            <tag name="controller.argument_value_resolver" priority="1000"/>
        </service>

        <!-- END Argument Resolver -->

        <service id="Shopware\Storefront\Framework\Seo\Product\UrlGeneratorExtension">
            <argument type="service" id="request_stack"/>
            <tag name="kernel.event_subscriber"/>
            <tag name="shopware.entity.extension"/>
        </service>

        <service id="Shopware\Storefront\Framework\Seo\Product\CanonicalUrlExtension">
            <tag name="shopware.entity.extension"/>
        </service>

        <service id="Shopware\Storefront\Framework\Seo\Category\CanonicalUrlExtension">
            <tag name="shopware.entity.extension"/>
        </service>

        <service id="Shopware\Storefront\Framework\Seo\SeoUrlDefinition" >
            <tag name="shopware.entity.definition" entity="seo_url" />
        </service>

        <service id="Shopware\Storefront\Framework\Command\SalesChannelCreateStorefrontCommand">
            <argument type="service" id="sales_channel.repository"/>
            <argument type="service" id="language.repository"/>
            <tag name="console.command"/>
        </service>

        <service id="Shopware\Storefront\Framework\Seo\SalesChannelExtension">
            <tag name="shopware.entity.extension"/>
        </service>

        <service id="Shopware\Storefront\Framework\Seo\Entity\FieldHandler\CanonicalUrlFieldSerializer">
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Write\WriteCommandExtractor" />
            <tag name="shopware.write_read_field_handler"/>
        </service>

    </services>
</container>
