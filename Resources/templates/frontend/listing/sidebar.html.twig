{% sw_extends '@Storefront/frontend/index/sidebar.html.twig' %}

{% block frontend_index_sidebar %}
    {% if theme.sidebarFilter %}
        {% block frontend_listing_sidebar %}
            <div class="listing--sidebar">
                {{ parent() }}

                {#{% if criteria %}#}
                    <div class="sidebar-filter">
                        <div class="sidebar-filter--content">
                            {% sw_include '@Storefront/frontend/listing/actions/action-filter-panel.html.twig' %}
                        </div>
                    </div>
                {#{% endif %}#}
            </div>
        {% endblock %}
    {% else %}
        {{ parent() }}
    {% endif  %}
{% endblock %}