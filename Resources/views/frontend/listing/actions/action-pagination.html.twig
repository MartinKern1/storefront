{# Paging which will be included in the "listing/listing_actions.tpl" #}

<div class="listing--paging panel--paging">

    {# Pagination label #}
    {% block frontend_listing_actions_paging_label %}{% endblock %}

    {# @var page \Shopware\Storefront\Framework\Page\StorefrontSearchResult #}
    {# Pagination - Frist page #}
    {% block frontend_listing_actions_paging_first %}
        {% if page.page > 1 %}
            <a href="{{ baseUrl }}?p=1" title="{% trans %}frontend.listing.listing_actions.ListingLinkFirst{% endtrans %}" class="paging--link paging--prev" data-action-link="true">
                <i class="icon--arrow-left"></i>
                <i class="icon--arrow-left"></i>
            </a>
        {% endif %}
    {% endblock %}

    {# Pagination - Previous page #}
    {% block frontend_listing_actions_paging_previous %}
        {% if page.page > 1 %}
            <a href="{{ baseUrl }}?p={{ page.page - 1 }}" title="{% trans %}frontend.listing.listing_actions.ListingLinkPrevious{% endtrans %}" class="paging--link paging--prev" data-action-link="true">
                <i class="icon--arrow-left"></i>
            </a>
        {% endif %}
    {% endblock %}

    {# Pagination - current page #}
    {% block frontend_listing_actions_paging_numbers %}
        {% if page.pageCount > 1 %}
            <a title="" class="paging--link is--active">{{ page.page }}</a>
        {% endif %}
    {% endblock %}

    {# Pagination - Next page #}
    {% block frontend_listing_actions_paging_next %}
        {% if page.page < page.pageCount %}
            <a href="{{ baseUrl }}?p={{ page.page + 1 }}" title="{% trans %}frontend.listing.listing_actions.ListingLinkNext{% endtrans %}" class="paging--link paging--next" data-action-link="true">
                <i class="icon--arrow-right"></i>
            </a>
        {% endif %}
    {% endblock %}

    {# Pagination - Last page #}
    {% block frontend_listing_actions_paging_last %}
        {% if page.page < page.pageCount %}
            <a href="{{ baseUrl }}?p={{ page.pageCount }}" title="{% trans %}frontend.listing.listing_actions.ListingLinkLast{% endtrans %}" class="paging--link paging--next" data-action-link="true">
                <i class="icon--arrow-right"></i>
                <i class="icon--arrow-right"></i>
            </a>
        {% endif %}
    {% endblock %}

    {# Pagination - Number of pages #}
    {% block frontend_listing_actions_count %}
        {% if page.pageCount > 1 and page.criteria.totalCountMode != 2 %}
            <span class="paging--display">
                {% trans %}frontend.listing.listing_actions.ListingTextFrom{% endtrans %} <strong>{{ page.listing.pageCount }}</strong>
            </span>
        {% endif %}
    {% endblock %}

    {# Products per page selection #}
    {% block frontend_listing_actions_items_per_page %}
        {% sw_include '@Storefront/frontend/listing/actions/action-per-page.html.twig' %}
    {% endblock %}
</div>