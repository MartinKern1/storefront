{#{namespace name="frontend/listing/box_article"}#}

{# Product actions #}
{% block frontend_listing_box_article_actions_content %}
    <div class="product--actions">

        {# Compare button #}
        {% block frontend_listing_box_article_actions_compare %}
            {% if shopware.config.compareShow %}
                <form action="{url controller='compare' action='add_article' articleID=$sArticle.articleID _seo=false}" method="post">
                    <button type="submit"
                       title="{s name='ListingBoxLinkCompare'}{/s}"
                       class="product--action action--compare"
                       data-product-compare-add="true">
                        <i class="icon--compare"></i> {% trans from 'frontend/listing/box_article' %}ListingBoxLinkCompare{% endtrans %}
                    </button>
                </form>
            {% endif %}
        {% endblock %}
    </div>
{% endblock %}
