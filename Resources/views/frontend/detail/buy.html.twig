{% block frontend_detail_buy %}
    {# @var product \Shopware\Core\Content\Product\Struct\StorefrontProductDetailStruct #}

    {% set url = url('frontend.cart.product.add', {'target': 'frontend.checkout.cart.page' }) %}

    <form name="addToCart"
          method="post"
          action="{{ url }}"
          class="buybox--form"
          data-add-article="true"
          data-eventName="submit"
          {% if shopware.theme.offcanvasCart %}
              {% set url = path('frontend.cart.product.add') %}
              data-showModal="false"
              data-addArticleUrl="{{ url }}"
          {% endif %}>

        <input type="hidden" name="identifier" value="{{ page.product.id }}"/>

        {% block frontend_detail_buy_button_container_outer %}
            {% if page.product.active is defined == false or product.active %}
                {% if page.product.isAvailable %}
                    {% block frontend_detail_buy_button_container %}
                        <div class="buybox--button-container block-group{% if NotifyHideBasket and page.product.allowNotification and product.stock <= 0 %} is--hidden{% endif %}">

                            {# Quantity selection #}
                            {% block frontend_detail_buy_quantity %}
                                <div class="buybox--quantity block">
                                    {% set maxPurchase = page.product.maxPurchase ?? 25 %}
                                    {% set maxQuantity = maxPurchase %}
                                    {% if page.product.isCloseout() and product.stock < maxPurchase %}
                                        {% set maxQuantity = page.product.stock %}
                                    {% endif %}

                                    {% set purchaseSteps = page.product.purchaseSteps ?? 1 %}
                                    {% set minPurchase = page.product.minPurchase ?? 1 %}

                                    {% block frontend_detail_buy_quantity_select %}
                                        <div class="select-field">
                                            <select id="sQuantity" name="quantity" class="quantity--select">
                                                {% for i in range(minPurchase, maxQuantity) %}
                                                    {% if i == minPurchase or purchaseSteps > 0 and i % purchaseSteps == 0 %}
                                                        <option value="{{ i }}">{{ i }}{% if page.product.packUnit %} {{ page.product.packUnit }}{% endif %}</option>
                                                    {% endif %}
                                                {% endfor %}
                                            </select>
                                        </div>
                                    {% endblock %}
                                </div>
                            {% endblock %}

                            {# "Buy now" button #}
                            {% block frontend_detail_buy_button %}
                                {% if page.product.sConfigurator and activeConfiguratorSelection == false %}
                                    <button class="buybox--button block btn is--disabled is--icon-right is--large" disabled="disabled" aria-disabled="true"{% if buy_box_display %} style="{{ buy_box_display }}"{% endif %}>
                                        {% trans %}detail.buyAddButton{% endtrans %} <i class="icon--arrow-right"></i>
                                    </button>
                                {% else %}
                                    <button class="buybox--button block btn is--primary is--icon-right is--center is--large"{% if buy_box_display %} style="{{ buy_box_display }}"{% endif %}>
                                        {% trans %}detail.buyAddButton{% endtrans %} <i class="icon--arrow-right"></i>
                                    </button>
                                {% endif %}
                            {% endblock %}
                        </div>
                    {% endblock %}
                {% endif %}
            {% endif %}
        {% endblock %}

        {% block frontend_detail_buy_services %}
            {% set lastId = null %}
            {# @var service \Shopware\Core\Content\Product\Aggregate\ProductService\ProductServiceEntity #}
            {% for service in page.product.services %}
                {% if lastId != service.option.groupId %}
                    {% set lastId = service.option.groupId %}

                    <select name="service[{{ service.option.groupId }}]">

                        {% set services = page.product.services.filterByGroupId(lastId) %}

                        <option value="" selected="selected">{{ service.option.group.name }}</option>

                        {% for groupService in services %}
                            <option value="{{ groupService.id }}">
                                {{ groupService.option.name }}
                                (+{{ groupService.price.gross|localizedcurrency(context.currency.shortName) }})
                            </option>
                        {% endfor %}
                    </select>
                {% endif %}
            {% endfor %}
        {% endblock %}
    </form>
{% endblock %}
