{# Footer menu #}
{% block frontend_index_footer_menu %}
    <div class="footer--columns block-group">
        {% sw_include '@Storefront/frontend/index/footer-navigation.html.twig' %}
    </div>
{% endblock %}

{# Copyright in the footer #}
{% block frontend_index_footer_copyright %}
    <div class="footer--bottom">

        {# Vat info #}
        {% block frontend_index_footer_vatinfo %}
            <div class="footer--vat-info">
                <p class="vat-info--text">
                    {% if sOutputNet %}
                        {% trans %}frontend.index.footer.FooterInfoExcludeVat{% endtrans %}
                    {% else %}
                        {% trans %}frontend.index.footer.FooterInfoIncludeVat{% endtrans %}
                    {% endif %}
                </p>
            </div>
        {% endblock %}

        {% block frontend_index_footer_minimal %}
            {% sw_include "@Storefront/frontend/index/footer_minimal.html.twig" with {'hideCopyrightNotice': 'true'} %}
        {% endblock %}

        {# Shopware\Core footer #}
        {% block frontend_index_shopware_footer %}

            {# Copyright #}
            {% block frontend_index_shopware_footer_copyright %}
                <div class="footer--copyright">
                    {% trans %}frontend.index.footer.IndexCopyright{% endtrans %}
                </div>
            {% endblock %}

            {# Logo #}
            {% block frontend_index_shopware_footer_logo %}
                <div class="footer--logo">
                    <i class="icon--shopware"></i>
                </div>
            {% endblock %}
        {% endblock %}
    </div>
{% endblock %}
