<div class="page-wrap--cookie-permission is--hidden"
     data-cookie-permission="true"
     data-urlPrefix="{url controller=index action=index}"
     {% if shopware.context.shopId %}data-shopId="{{ shopware.context.shopId }}"{% endif %}>

    {% block cookie_permission_container %}
        <div class="cookie-permission--container">
            {% block cookie_permission_content %}
                <div class="cookie-permission--content">
                    {% block cookie_permission_content_text %}
                        {% trans %}frontend.cookiepermission.index.cookiePermission.text{% endtrans %}
                    {% endblock %}

                    {% block cookie_permission_content_link %}
                        {$privacyLink = {config name="data_privacy_statement_link"}}
                        {% if shopware.config.data_privacy_statement_link %}
                            <a title="{{ 'frontend.cookiepermission.index.cookiePermission.linkText'|trans|escape }}"
                               class="cookie-permission--privacy-link"
                               href="{{ shopware.config.data_privacy_statement_link }}">
                                {% trans %}frontend.cookiepermission.index.cookiePermission.linkText{% endtrans %}
                            </a>
                        {% endif %}
                    {% endblock %}
                </div>
            {% endblock %}

            {% block cookie_permission_accept_button %}
                <div class="cookie-permission--button">
                    <a href="#" class="cookie-permission--accept-button btn is--primary is--large is--center">
                        {% trans %}frontend.cookiepermission.index.cookiePermission.buttonText{% endtrans %}
                    </a>
                </div>
            {% endblock %}
        </div>
    {% endblock %}
</div>