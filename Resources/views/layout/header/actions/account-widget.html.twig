{% block layout_header_actions_account_widget %}
	<div class="dropdown">
		{% block layout_header_actions_account_widget_dropdown_button %}
			<button class="btn btn-light account-widget-btn header-actions-btn"
					type="button"
					id="accountWidget"
					data-offcanvas-account-menu="true"
					data-toggle="dropdown"
					aria-haspopup="true"
					aria-expanded="false">
				{% sw_include '@Storefront/layout/_utilities/icon.html.twig' with {
					'name': 'avatar-single'
				} %}
			</button>
		{% endblock %}

		{% block layout_header_actions_account_widget_dropdown_menu %}
			<div class="dropdown-menu dropdown-menu-right account-widget-dropdown js-account-widget-dropdown"
				 aria-labelledby="accountWidget">
				{% sw_include '@Storefront/layout/header/account-menu.html.twig' %}
			</div>
		{% endblock %}
	</div>
{% endblock %}
