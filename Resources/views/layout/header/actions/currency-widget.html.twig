{% block layout_header_actions_currency_widget%}
	{% if page.header.currencies.elements|length > 1 %}
		<div class="top-bar-nav-item top-bar-currency">
			{% block layout_header_actions_currency_widget_form %}
				<form method="post"
					  action="{{ path('frontend.checkout.configure') }}"
					  class="currency-form">
					{% block layout_header_actions_currency_widget_content %}
						<div class="currencies-menu dropdown">
							{% block layout_header_actions_currency_widget_dropdown_toggle %}
								<button class="btn dropdown-toggle top-bar-nav-btn"
										type="button"
										id="currenciesDropdown"
										data-toggle="dropdown"
										aria-haspopup="true"
										aria-expanded="false">
									{{ page.header.activeCurrency.symbol }}
									<span class="top-bar-nav-name">{{ page.header.activeCurrency.name }}</span>
								</button>
							{% endblock %}

							{% block layout_header_actions_currency_widget_form_items %}
								<ul class="top-bar-list dropdown-menu dropdown-menu-right"
									aria-labelledby="currenciesDropdown">
									{% for currency in page.header.currencies.elements %}
										<li>
											<a class="top-bar-list-item dropdown-item{% if currency.id is same as(page.header.activeCurrency.id) %} item-checked{% endif %}"
											   href="#"
											   title="{{ currency.shortName }}">
												<label class="top-bar-list-label"
													   for="{{ currency.id }}">
													<input class="top-bar-list-input"
														   id="{{ currency.id }}"
														   value="{{ currency.id }}"
														   name="currencyId"
														   type="radio"
														{% if currency.id is same as(page.header.activeCurrency.id) %} checked{% endif %}>
													{{ currency.symbol }} {{ currency.shortName }}
												</label>
											</a>
										</li>
									{% endfor %}
								</ul>
							{% endblock %}

							{% block layout_header_actions_currency_widget_form_redirect %}
								<input name="redirectTo" type="hidden" value="{{ app.request.get('_route') }}"/>

								{% for key, value in app.request.attributes.get('_route_params') %}
									<input name="redirectParameters[{{ key }}]" type="hidden" value="{{ value }}">
								{% endfor %}
							{% endblock %}
						</div>
					{% endblock %}
				</form>
			{% endblock %}
		</div>
	{% endif %}
{% endblock %}
