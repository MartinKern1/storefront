{% block layout_header %}
    {% block layout_top_bar %}
        {% sw_include '@Storefront/layout/header/top-bar.html.twig' %}
    {% endblock %}

    {% block layout_header_navigation %}
        <div class="row header-row">
            {% block layout_header_logo %}
                <div class="col-12 col-md-auto header-logo-col">
                    {% sw_include '@Storefront/layout/header/logo.html.twig' %}
                </div>
            {% endblock %}

            {% block layout_header_search %}
                <div class="col-12 col-md header-search-col">
                    {% sw_include '@Storefront/layout/header/search.html.twig' %}
                </div>
            {% endblock %}

            {% block layout_header_actions %}
                <div class="col-12 col-md-auto header-actions-col">
                    {% block layout_header_main_navigation_toggle %}
                        <div class="nav-main-toggle">
                            {% block layout_header_main_navigation_toggle_button %}
                                <button class="btn btn-light nav-main-toggle-btn header-actions-btn"
                                        type="button"
                                        data-offcanvas-menu="true"
                                        aria-label="{{ "general.menuLink"|trans }}">
                                    <i class="fas fa-bars"></i>
                                </button>
                            {% endblock %}
                        </div>
                    {% endblock %}

                    {% block layout_header_search_toggle %}
                        <div class="search-toggle">
                            <button class="btn btn-light search-toggle-btn header-actions-btn collapsed"
                                    type="button"
                                    data-toggle="collapse"
                                    data-target="#searchCollapse"
                                    aria-expanded="false"
                                    aria-controls="searchCollapse"
                                    aria-label="{{ "header.searchButton"|trans }}">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    {% endblock %}

                    {% block layout_header_actions_account %}
                        <div class="account-widget">
                            {% sw_include '@Storefront/layout/header/actions/account-widget.html.twig' %}
                        </div>
                    {% endblock %}

                    {% block layout_header_actions_cart %}
                        <div class="cart-widget"
                             data-offcanvas-cart="true">
                            <a class="btn btn-light cart-widget-btn header-actions-btn"
                               href="{{ path('frontend.checkout.cart.page') }}"
                               data-cart-widget="true"
                               title="{{ 'checkout.cartTitle'|trans }}">
                                {% sw_include '@Storefront/layout/header/actions/cart-widget.html.twig' %}
                            </a>
                        </div>
                    {% endblock %}

                    {% block layout_header_tablet_main_navigation_toggle_button %}
                        <div class="menu-button">
                            {% block layout_header_tablet_main_navigation_toggle_button_inner %}
                                <button class="btn btn-light nav-main-toggle-btn header-actions-btn"
                                        type="button"
                                        data-offcanvas-menu="true"
                                        aria-label="{{ "general.menuLink"|trans }}">
                                    {% block layout_header_tablet_main_navigation_toggle_button_icon %}
                                        <i class="fas fa-bars"></i>
                                    {% endblock %}
                                </button>
                            {% endblock %}
                        </div>
                    {% endblock %}
                </div>
            {% endblock %}
        </div>
    {% endblock %}
{% endblock %}
