{% sw_extends '@Storefront/layout/header/header.html.twig' %}

{% block layout_header %}
	<header class="header-minimal">
		{% block layout_header_minimal_inner %}
			<div class="container">
				{% block layout_header_minimal_row %}
					<div class="row header-row header-minimal-row">
						{% block layout_header_minimal_logo %}
							<div class="col-6 col-md-auto header-minimal-logo">
								{% sw_include '@Storefront/layout/header/logo.html.twig' %}
							</div>
						{% endblock %}

						{% block layout_header_minimal_contact %}
							<div class="header-minimal-contact">
								{{ "header.supportInfo"|trans|raw }}
							</div>
						{% endblock %}

						{% block layout_header_minimal_switch %}
							<div class="col-6 col-md-auto header-minimal-home">
								{% sw_icon 'arrow-simple-left' %}
								<a class="btn btn-link btn-sm header-minimal-home-btn"
								   href="{{ path('frontend.home.page') }}"
								   title="{{ "header.logoLink"|trans }}">
									{{ "header.logoLink"|trans }}
								</a>
							</div>
						{% endblock %}
					</div>
				{% endblock %}
			</div>
		{% endblock %}
	</header>
{% endblock %}
