{% block base_header %}
    {% block base_top_bar %}
        {% sw_include '@Storefront/base/header/top-bar.html.twig' %}
    {% endblock %}

    {% block base_header_navigation %}
        <div class="row header-row">
            {% block base_header_logo %}
                <div class="col-12 col-md-auto logo-col">
                    {% sw_include '@Storefront/base/header/logo.html.twig' %}
                </div>
            {% endblock %}

            {% block base_header_search %}
                <div class="col-12 col-md search-col">
                    {% sw_include '@Storefront/base/header/search.html.twig' %}
                </div>
            {% endblock %}

            {% block base_header_actions %}
                {% block base_header_actions_account %}

                {% endblock %}

                {% block base_header_actions_cart %}
                    <div class="col-12 col-md-auto cart-widget-col">
                        {% sw_include '@Storefront/base/header/actions/cart-widget.html.twig' %}
                    </div>
                {% endblock %}
            {% endblock %}
        </div>
    {% endblock %}
{% endblock %}
