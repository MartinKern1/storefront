{% block base_header %}
    {% block base_top_bar %}
        {% sw_include '@Storefront/base/header/top-bar.html.twig' %}
    {% endblock %}

    {% block base_header_navigation %}
        <div class="row header-row">
            {% block base_header_logo %}
                <div class="col-12 col-md-auto header-logo-col">
                    {% sw_include '@Storefront/base/header/logo.html.twig' %}
                </div>
            {% endblock %}

            {% block base_header_search %}
                <div class="col-12 col-md header-search-col">
                    {% sw_include '@Storefront/base/header/search.html.twig' %}
                </div>
            {% endblock %}

            {% block base_header_actions %}
                <div class="col-12 col-md-auto header-actions-col">
                    {% block base_header_actions_account %}
                        <div class="account-widget">
                            {% sw_include '@Storefront/base/header/actions/account-widget.html.twig' %}
                        </div>
                    {% endblock %}

                    {% block base_header_actions_cart %}
                        <div class="cart-widget">
                            {% sw_include '@Storefront/base/header/actions/cart-widget.html.twig' %}
                        </div>
                    {% endblock %}
                </div>
            {% endblock %}
        </div>
    {% endblock %}
{% endblock %}
