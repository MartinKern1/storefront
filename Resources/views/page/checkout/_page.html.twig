{% sw_extends '@Storefront/base.html.twig' %}

{% block base_content %}
    {% block page_checkout %}
        <div class="checkout is-{{ controllerAction }}">
            {% block page_checkout_container %}
                <div class="checkout-main">
                    {% block page_checkout_main %}
                        <div class="checkout-main-left">
                            {% block page_checkout_main_content %}{% endblock %}
                        </div>
                    {% endblock %}

                    {% block page_checkout_sidebar %}
                        <div class="checkout-main-right">
                            {% block page_checkout_sidebar_inner %}
                                <div class="checkout-sidebar">
                                    {% block page_checkout_sidebar_content %}
                                        <div class="checkout-sidebar-summary">
                                            {% block page_checkout_summary_header %}
                                                <h2 class="checkout-summary-header">
                                                    {{ "checkout.summaryHeader"|trans }}
                                                </h2>
                                            {% endblock %}

                                            {% block page_checkout_summary_list %}
                                                <div class="checkout-summary-list">
                                                    {% block page_checkout_sidebar_list_inner %}
                                                        {% sw_include '@Storefront/page/checkout/summary.html.twig' %}
                                                    {% endblock %}
                                                </div>
                                            {% endblock %}
                                        </div>
                                    {% endblock %}

                                    {% block page_checkout_sidebar_actions %}{% endblock %}
                                </div>
                            {% endblock %}
                        </div>
                    {% endblock %}
                </div>
            {% endblock %}
        </div>
    {% endblock %}
{% endblock %}
