{# Notepad entry #}
{% block frontend_index_checkout_actions_notepad %}
    <li class="navigation--entry entry--notepad" role="menuitem">
        <a href="{url controller='note'}" title="{{ 'frontend.index.checkout_actions.IndexLinkNotepad'|trans|escape }}" class="btn">
            <i class="icon--heart"></i>
            {% if sNotesQuantity > 0 %}
                <span class="badge notes--quantity">
                    {{ sNotesQuantity ?: '0' }}
                </span>
            {% endif %}
        </a>
    </li>
{% endblock %}

{# My account entry #}
{% block frontend_index_checkout_actions_my_options %}
    <li class="navigation--entry entry--account" role="menuitem">
        {% block frontend_index_checkout_actions_account %}
            <a href="{{ path('frontend.account.home.page') }}" title="{{ 'frontend.index.checkout_actions.IndexLinkAccount'|trans|escape }}" class="btn is--icon-left entry--link account--link">
                <i class="icon--account"></i>
                <span class="account--display">
                    {% trans %}frontend.index.checkout_actions.IndexLinkAccount{% endtrans %}
                </span>
            </a>
        {% endblock %}
    </li>
{% endblock %}

{# Cart entry #}
{% block frontend_index_checkout_actions_cart %}
    <li class="navigation--entry entry--cart" role="menuitem">
        <a class="btn is--icon-left cart--link" href="{{ url('frontend.checkout.cart.page') }}" title="{{ 'frontend.index.checkout_actions.IndexLinkCart'|trans|escape }}">
            <span class="cart--display">
                {% if context.customer %}
                    {% trans %}frontend.index.checkout_actions.IndexLinkCheckout{% endtrans %}
                {% else %}
                    {% trans %}frontend.index.checkout_actions.IndexLinkCart{% endtrans %}
                {% endif %}
            </span>

            <span class="badge is--primary is--minimal cart--quantity{% if cartQuantity < 1 %} is--hidden{% endif %}">{{ cartQuantity ?: '0' }}</span>

            <i class="icon--basket"></i>

            <span class="cart--amount">
                {% sw_include('@Storefront/frontend/checkout/ajax_amount.html.twig') with {'amount': cartAmount} %}
            </span>
        </a>
        <div class="ajax-loader">&nbsp;</div>
    </li>
{% endblock %}

{% block frontend_index_checkout_actions_inner %}{% endblock %}
